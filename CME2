print("            Sistema de cadastro de produtos")

print("produto 1")
print("Informe o nome do 1º produto")
nome1 = input()
print("Informe o fabricante") 
fabri1 = input()
print ("Coloque a quantidade em estoque do 1° produto")
quan1 = int(input())
print("Informe o preço do 1° produto")
preço1=float(input())

print("O valor total do estoque",quan1*preço1)

